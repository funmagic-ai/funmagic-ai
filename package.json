{
  "name": "funmagic-ai",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --env-file=.env --parallel dev:backend dev:worker dev:web dev:admin",
    "dev:web": "bun --env-file=.env --cwd apps/funmagic-web-vue3 dev",
    "dev:admin": "bun --env-file=.env --cwd apps/funmagic-admin-vue3 dev",
    "dev:backend": "bun --env-file=.env --cwd apps/funmagic-backend dev",
    "dev:worker": "bun --env-file=.env --cwd packages/worker dev",
    "dev:worker:studio": "bun --env-file=.env --cwd packages/worker dev:studio",
    "build": "bun run --filter '*' build",
    "db:generate": "source .env && packages/database/node_modules/.bin/drizzle-kit generate --config=packages/database/drizzle.config.ts",
    "db:migrate": "source .env && packages/database/node_modules/.bin/drizzle-kit migrate --config=packages/database/drizzle.config.ts",
    "db:push": "source .env && packages/database/node_modules/.bin/drizzle-kit push --config=packages/database/drizzle.config.ts",
    "db:studio": "source .env && packages/database/node_modules/.bin/drizzle-kit studio --config=packages/database/drizzle.config.ts",
    "infra:up": "docker compose -f docker/docker-compose.infra.yml up -d",
    "infra:down": "docker compose -f docker/docker-compose.infra.yml down",
    "infra:logs": "docker compose -f docker/docker-compose.infra.yml logs -f",
    "stack:up": "docker compose -f docker/docker-compose.yml up -d --build",
    "stack:down": "docker compose -f docker/docker-compose.yml down",
    "stack:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "stack:rebuild": "docker compose -f docker/docker-compose.yml up -d --build --force-recreate",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "api:generate": "bunx openapi-typescript http://localhost:8000/openapi.json -o packages/shared/src/api/types.ts"
  },
  "devDependencies": {
    "knip": "^5.83.1",
    "openapi-typescript": "^7.10.1"
  }
}
