# =============================================================================
# FunMagic AI - Minimal Deployment Variables
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# AWS region
region = "us-east-2"

# Environment name
environment = "minimal"

# EC2 instance type (t3.medium = 2 vCPU, 4GB RAM)
instance_type = "t3.medium"

# Name of your SSH key pair (created in AWS EC2 console)
ssh_key_name = "your-key-pair-name"

# CIDR block for SSH access (restrict to your IP for security)
# Example: "1.2.3.4/32" for single IP, or "0.0.0.0/0" for any IP
allowed_ssh_cidr = "0.0.0.0/0"

# Your domain name
domain_name = "funmagic.ai"

# EBS volume size in GB
ebs_volume_size = 50
