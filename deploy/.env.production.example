# =============================================================================
# FunMagic AI - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your values
# =============================================================================

# ====================================
# Database (Docker Compose internal)
# ====================================
POSTGRES_USER=funmagic
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=funmagic

# ====================================
# AWS Configuration
# ====================================
AWS_REGION=us-east-2

# S3 Access (create IAM user or use instance role)
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key

# S3 Buckets
S3_BUCKET_PUBLIC=funmagic-public-prod
S3_BUCKET_PRIVATE=funmagic-private-prod
S3_BUCKET_ADMIN=funmagic-admin-prod

# ====================================
# Security (IMPORTANT: Generate unique values!)
# ====================================
# Generate with: openssl rand -base64 32
SECRET_KEY=generate-with-openssl-rand-base64-32

# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32

# ====================================
# URLs (Update with your domain)
# ====================================
# API URL (used by frontend)
VITE_API_URL=https://api.funmagic.ai

# App URLs
VITE_APP_URL=https://funmagic.ai
VITE_ADMIN_URL=https://admin.funmagic.ai

# Auth URL (backend)
BETTER_AUTH_URL=https://api.funmagic.ai

# CORS & Trusted Origins
CORS_ORIGINS=https://funmagic.ai,https://admin.funmagic.ai
TRUSTED_ORIGINS=https://funmagic.ai,https://admin.funmagic.ai

# ====================================
# Optional: CDN Configuration
# ====================================
# CDN_BASE_URL=https://cdn.funmagic.ai
# CLOUDFRONT_KEY_PAIR_ID=your-key-pair-id
# CLOUDFRONT_PRIVATE_KEY=your-private-key-base64

# ====================================
# Contact
# ====================================
NEXT_PUBLIC_SUPPORT_EMAIL=support@funmagic.ai
